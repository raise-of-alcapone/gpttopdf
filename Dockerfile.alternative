FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for Playwright
RUN apt-get update && apt-get install -y \
    wget gnupg curl fonts-liberation libappindicator3-1 \
    libasound2 libatk-bridge2.0-0 libdrm2 libgtk-3-0 \
    libnspr4 libnss3 libxss1 libxtst6 xdg-utils \
    libxrandr2 libpangocairo-1.0-0 libatk1.0-0 \
    libcairo-gobject2 libgdk-pixbuf2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python packages
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright completely as root
RUN playwright install chromium
RUN playwright install-deps chromium

# Make Playwright accessible to all users
RUN chmod -R 755 /root/.cache/ms-playwright

# Create user and copy app
RUN useradd -m -u 1000 appuser
COPY . .
RUN chown -R appuser:appuser /app

# Run as appuser but with access to root's Playwright
USER appuser
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright

EXPOSE 5000
CMD ["gunicorn", "--config", "gunicorn.conf.py", "app:app"]
